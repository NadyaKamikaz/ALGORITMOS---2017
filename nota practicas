void mostrart_estudiante(t_estudiante vector[], int n)
{
	for (int i=0; i<n ; i++)
		{
		cout<<endl<<vector[i].nroemp<<"\t";
		cout<<vector[i].nombre<<"\t";
		cout<<vector[i].apellido<<"\t";
		cout<<vector[i].notapractica<<"\t";
		cout<<promedio_parcial(vector,i)<<"\t";
	    cout<<vector[i].examen_final<<"\t";
		cout<<(vector[i].notapractica*0.2)+(promedio_parcial(vector,i)*0.4)+(vector[i].examen_final*0.4)<<"\t";
	}
}


