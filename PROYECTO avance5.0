bool validarnumeroentero (string X)
	{bool k = true;
	int i=0, cont=0; 
	for(i=0;i<X.length(); i++);
	   {if(isdigit(X[i]))
		  {cont++;
	      }
	
	   }
	if(cont==X.length())
	    k = false;
  return k;
}
	

bool validarletras (string X)
	{bool k = true;
	int i=0, cont=0; 
	for(i=0;i<X.length(); i++);
	  {if(isalpha(X[i]) !=' ' || X[i] == ' ')
		  {cont++;
	      }
	
	  }
	
	if(cont==X.length())
	    k = false;
	return k;
	}
	

