#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"


using namespace std;

float ecuacion(float a, float b, float c);
void main()
{ 
	float a,b,c,x1,x2,xI,xR,x;
	cout<<"ingrese a: ";
	cin>>a;
	if(a==0)
		cout<<"Error";
	else
	{
	cout<<"ingrese b: ";
	cin>>b;
	cout<<"ingrese c: ";
	cin>>c;
	x=ecuacion(a,b,c);
	cout<<"Solucion unica: "<<x;
	cout<<"La solucion real1 es: "<<x1;
	cout<<"La solucion real2 es: "<<x2;
	cout<<"La solucion imaginaria1 es: "<<xR<<"+"<<xI<<"i";
	cout<<"La solucion imaginaria2 es: "<<xR<<"-"<<xI<<"i";
	}
getch();
}
float ecuacion(float a, float b, float c)
{
	float D,x,x1,x2,xR,xI;
	D=pow(b,2)-4*a*c;
	if(D>=0)
		if(D==0)
	    {
	      x=-b/(2*a);
	    }
	    else
	    {
	     x1=-b+sqrt(D)/(2*a);
	     x2=-b-sqrt(D)/(2*a);
	    }
	else
	{
		xR=-b/(2*a);
		xI=sqrt(-D)/(2*a);
	}
return x;
}

